{
  "extraKnownMarketplaces": {
    "alignment-hive": {
      "source": {"source": "github", "repo": "Crazytieguy/alignment-hive"},
      "autoUpdate": true
    }
  },
  "enabledPlugins": {
    "hive-mind@alignment-hive": true
  },
  "permissions": {
    "allow": [
      "Bash(git*)",
      "Bash(git:*)"
    ]
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo -e \"\\a\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo -e \"\\a\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude_bash_logger.sh"
          }
        ]
      }
    ]
  }
}
